{
    "list.source.files.excludePatterns": ["*/tmp/*","**/target/**","screenshots/**","*.so","*.swp","*.zip","*.d","*.o","*.bin","*.sh","*.svg","*.mkv","*.png","*.mkv","*.avi","*.mp4","*.iso","*.tar.gz","*.jpg","*.pdf"],
    "emmet.includeLanguages": {"jsp": "html"},
    "snippets.loadFromExtensions": true,
    "snippets.ultisnips.enable": true,
    "session.directory": "~/.config/nvim/sessions",
    "languageserver": {
        "nim": {
            "command": "nimlsp",
            "filetypes": ["nim"]
        },
        "clojure-lsp": {
            "command": "bash",
            "args": ["-c", "clojure-lsp"],
            "filetypes": ["clojure"],
            "rootPatterns": ["project.clj"],
            "additionalSchemes": ["jar", "zipfile"],
            "trace.server": "verbose",
            "initializationOptions": {
            }
        }
    },
    "java.errors.incompleteClasspath.severity": "ignore",
    "latex.build.onSave": true,
    "latex.lint.onChange": true,
    "yank.enableCompletion": false,
    "suggest.timeout": 15000
}
